{% extends 'template/base.html.twig' %}
{% block navItems %}
{% include 'nav.html' %}
{% endblock %}
{% block body %}
    <section class="content-section">
        <div class="container">
            <h1>Tag</h1>

                <table>
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ tag.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ tag.name }}</td>
                        </tr>
                        <tr>
                            <th>Color</th>
                            <td>{{ tag.color }}</td>
                        </tr>
                    </tbody>
                </table>

                <ul>
                    <li>
                        <a href="{{ path('tag_index') }}">Back to the list</a>
                    </li>
                    <li>
                        <a href="{{ path('tag_edit', { 'id': tag.id }) }}">Edit</a>
                    </li>
                    <li>
                        {{ form_start(delete_form) }}
                            <input type="submit" value="Delete">
                        {{ form_end(delete_form) }}
                    </li>
                </ul>

        </div>
    </section>
{% endblock %}
