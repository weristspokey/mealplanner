{% extends 'base.html.twig' %}
{% block body %}
    <section class="content-section">
        <div class="container">
             <div class="row">
                <div class="col-md-6 m-auto">
                    <h1 class="text-center">{{ tag.name }}</h1>
                </div>
                <div class="col-md-2">
                    <a href="{{ path('recipe_new') }}">
                        <span class="fa fa-edit" aria-hidden="true"> Edit Tag</span>
                    </a>
                </div>
            </div>

                <table>
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ tag.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ tag.name }}</td>
                        </tr>
                        <tr>
                            <th>Color</th>
                            <td>{{ tag.color }}</td>
                        </tr>
                    </tbody>
                </table>

                <ul>
                    <li>
                        <a href="{{ path('tag_index') }}">Back to the list</a>
                    </li>
                    <li>
                        <a href="{{ path('tag_edit', { 'id': tag.id }) }}">Edit</a>
                    </li>
                    <li>
                        {{ form_start(delete_form) }}
                            <input type="submit" value="Delete">
                        {{ form_end(delete_form) }}
                    </li>
                </ul>

        </div>
    </section>
{% endblock %}
