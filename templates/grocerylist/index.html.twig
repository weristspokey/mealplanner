{% extends 'base.html.twig' %}
{% block body %}
    <section class="content-section">
        <div class="container" style="border: 1px solid black; padding-bottom: 50px">
            {% include ('flash-messages.html.twig') %}
            <div class="row">
                <div class="col-md-12">
                    <h1 class="text-center">You have {{grocerylists|length }} Grocerylists</h1>
                </div>
            </div>
            <div class="row" style="margin-bottom: 20px">
                <div class="col-md-4 m-auto">
                    <div class="card">
                        <div class="card-header">
                            <a data-toggle="modal" data-target="#AddGrocerylistModal">
                        <span class="fa fa-plus" aria-hidden="true"> Add Grocerylist</span>
                    </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
            {% for grocerylist in grocerylists %}
                <div class="col-md-4" style="margin-bottom: 20px">
                    <ul class="list-group">
                        <li class="list-group-item text-center">
                            {{ grocerylist.name }}
                            <a href="{{ path('grocerylist_delete', {'id': grocerylist.id }) }}">
                                <span title="Delete grocerylist" class="fa fa-remove pull-right" aria-hidden="true"></span>
                            </a>  
                        </li>
                        <li class="list-group-item text-center">
                            <div class="row">
                                <div class="col-md-12">
                                    {{ form(forms[grocerylist.id]) }} 
                                </div>
                            </div>
                        </li>{# href="{{ path('grocerylistItem_move', {'id': item.id })}}"#}
                        {% for item in grocerylist.grocerylistItems %}
                        <li class="list-group-item text-center">
                            <a data-toggle="modal" data-target="#MoveItemModal" class="moveItemBtn"  data-item-id="{{item.id}}"
                            data-food-id="{{item.foodId.id}}">
                                <span title="Add to Kitchen" class="fa fa-arrow-left pull-left" aria-hidden="true"></span>
                            </a>
                            {{ item.foodId.name}}                
                            <a href="{{ path('grocerylistItem_delete', {'id': item.id }) }}">
                                <span title="Delete from grocerylist" class="fa fa-remove pull-right" aria-hidden="true"></span>
                            </a>          
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            {% endfor %}
            </div>
        </div>
    </section>
    <div class="modal fade" id="MoveItemModal" tabindex="-1" role="dialog" aria-labelledby="MoveItemModalLabel">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Item to Kitchen</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            {{ form_start(moveItemForm) }}
                            <input type="number" class="form-control d-none" name="itemId" id="itemId">
                            {{ form_widget(moveItemForm) }}
                            {{ form_end(moveItemForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="AddGrocerylistModal" tabindex="-1" role="dialog" aria-labelledby="AddGrocerylistModalLabel">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Grocerylist</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            {{ form_start(form) }}
                                {{ form_widget(form) }}
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
{{ parent() }}
        <script src="{{ asset('js/grocerylist.js') }}"></script>
{% endblock %}
