{% extends 'base.html.twig' %}
{% block body %}    
    <section class="content-section">
        <div class="container">
            <h1 class="text-center">Login</h1>
            {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
            {% endif %}
            <form action="{{ path('login') }}" method="post" class="col-md-6 m-auto">
                <div class="form-group">
                    <input type="text" id="username" name="_username" placeholder="Username" value="{{ last_username }}" class="form-control"/>
                </div>
                <div class="form-group">
                    <input type="password" id="password" name="_password" placeholder="Password" class="form-control" />
                </div>
                <button type="submit" class="btn btn-default">
                    <i class="fa fa-sign-in" aria-hidden="true"></i> Login
                </button>
            </form>
        </div>
    </section>

{% endblock %}
{% block javascripts %}
{{ parent() }}
        <script src="{{ asset('js/index.js') }}"></script>
{% endblock %}
