{% extends 'base.html.twig' %}
{% block body %}    
    <section class="content-section">
        <div class="container">
        {% include ('flash-messages.html.twig') %}
            <h1 class="text-center">Admin Area</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Username</th>
                        <th scope="col">Email</th>
                        <th scope="col">Recipes</th>
                        <th scope="col">Grocerylists</th>
                        <th scope="col">KitchenLists</th>
                        <th scope="col">MealplanItems</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <th scope="row">{{user.id}}</th>
                        <td>{{user.username}}</td>
                        <td>{{user.email}}</td>
                        <td><a class="delete-user-button" href="#">
                            <span title="Delete User" class="fa fa-remove pull-right" aria-hidden="true"></span>
                            </a>
                            <form class="delete-form" action="{{ path('delete_user', {'id': user.id}) }}" method="POST"> 
                            </form>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </section>

{% endblock %}
{% block javascripts %}
{{ parent() }}
        <script src="{{ asset('js/index.js') }}"></script>
{% endblock %}