{% extends 'base.html.twig' %}
{% block body %}    
    <section class="content-section">
        <div class="container">
            <h1 class="text-center">Admin Area</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Username</th>
                        <th scope="col">Email</th>
                        <th scope="col">Recipes</th>
                        <th scope="col">Grocerylists</th>
                        <th scope="col">KitchenLists</th>
                        <th scope="col">MealplanItems</th>
                    </tr>
                </thead>
                <tbody>
            {% for user in users %}
                <tr>
                  <th scope="row">{{user.id}}</th>
                  <td>{{user.username}}</td>
                  <td>{{user.email}}</td>
                </tr>
            {% endfor %}
            </tbody>
            </table>
            
        </div>
    </section>

{% endblock %}
