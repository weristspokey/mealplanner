{% extends 'base.html.twig' %}
{% block body %}
    <section class="content-section">
        <div class="container">
            {% include ('flash-messages.html.twig') %}
            <h1 class="text-center">Weekly mealplan</h1>
            <ul>
             {% for item in mealplanItems %}
             <li>{{item.mealplanId| date("d.m.Y")}}
                {% if item.foodId %}
                    {{item.foodId.name}} {{item.category}}
                {% endif %}
                {% if item.recipeId %}
                    {{item.recipeId.name}} {{item.category}}
                {% endif %}
            {% endfor %}</li>
            </ul>
            <div id='calendar'>
            </div>
        </div>
            </section>

<div class="modal fade" id="AddMealplanModal" tabindex="-1" role="dialog" aria-labelledby="AddMealplanModalLabel">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Mealplan</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                    {{form(add_mealplan_form)}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="AddMealplanItemModal" tabindex="-1" role="dialog" aria-labelledby="AddMealplanItemModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add MealplanItem</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                    {{form(newMealplanItemForm)}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
{{ parent() }}
        <script src="{{ asset('js/mealplan.js') }}"></script>
        <script src="{{ asset('bxslider/jquery.bxslider.js') }}"></script>
        <script src="{{ asset('js/slider.js') }}"></script>
{% endblock %}
