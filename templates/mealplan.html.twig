{% extends 'base.html.twig' %}
{% block body %}
    <section class="content-section">
        <div class="container">
            <h1 class="text-center">Weekly mealplan</h1>
                    <div id="mealplanSlider">
                        {% for mealplan in mealplans %}
                        <div class="slide col-md-3">
                            <div class="card">
                                <div class="card-header">
                                    <p>{{mealplan.date | date("D d.m.Y")}}
                                        <a href="{{ path('mealplan_delete', {'id': mealplan.id }) }}">
                                            <span title="Delete Mealplan" class="fa fa-remove" aria-hidden="true"></span>
                                        </a>
                                    </p>
                                </div>
                                <div class="card-block">
                                    <div class="card-headline">
                                        <h5>Breakfast</h5>
                                        <a href="" data-toggle="modal" data-target="#EditMealModal"><span class="fa fa-edit" aria-hidden="true"></span></a>
                                    </div>
                                    <ul class="list-group">
                                        {% for mealplanItem in mealplan.mealplanItems %}
                                            {% if mealplanItem.category == "Breakfast" %}
                                                <li class="list-group-item">{{mealplanItem.foodId.name}}
                                                    <a href="{{ path('mealplanItem_delete', {'id': mealplanItem.id }) }}">
                                                        <span title="Delete from Mealplan" class="fa fa-remove pull-right" aria-hidden="true"></span>
                                                    </a>
                                                </li>
                                            {% endif %}
                                        {% endfor %}
                                    </ul>
                                    <div class="card-headline">
                                        <h5>Lunch</h5>
                                        <a href="" data-toggle="modal" data-target="#addEditMealModal"><span class="fa fa-edit" aria-hidden="true"></span></a>
                                    </div>
                                    <ul class="list-group">
                                        {% for mealplanItem in mealplan.mealplanItems %}
                                            {% if mealplanItem.category == "Lunch" %}
                                                <li class="list-group-item">{{mealplanItem.foodId.name}}
                                                    <a href="{{ path('mealplanItem_delete', {'id': mealplanItem.id }) }}">
                                                        <span title="Delete from Mealplan" class="fa fa-remove pull-right" aria-hidden="true"></span>
                                                    </a>
                                                </li>
                                            {% endif %}
                                        {% endfor %}
                                    </ul>
                                    <div class="card-headline">
                                        <h5>Dinner</h5>
                                        <a href="" data-toggle="modal" data-target="#addEditMealModal"><span class="fa fa-edit" aria-hidden="true"></span></a>
                                    </div>
                                    <ul class="list-group">
                                        {% for mealplanItem in mealplan.mealplanItems %}
                                            {% if mealplanItem.category == "Dinner" %}
                                                <li class="list-group-item">{{mealplanItem.foodId.name}}
                                                    <a href="{{ path('mealplanItem_delete', {'id': mealplanItem.id }) }}">
                                                        <span title="Delete from Mealplan" class="fa fa-remove pull-right" aria-hidden="true"></span>
                                                    </a>
                                                </li>
                                            {% endif %}
                                        {% endfor %}
                                    </ul>
                                    <div class="card-headline">
                                        <h5>Snacks</h5>
                                        <a href="" data-toggle="modal" data-target="#addEditMealModal"><span class="fa fa-edit" aria-hidden="true"></span></a>
                                    </div>
                                    <ul class="list-group">
                                        {% for mealplanItem in mealplan.mealplanItems %}
                                            {% if mealplanItem.category == "Snacks" %}
                                                <li class="list-group-item">{{mealplanItem.foodId.name}}
                                                    <a href="{{ path('mealplanItem_delete', {'id': mealplanItem.id }) }}">
                                                        <span title="Delete from Mealplan" class="fa fa-remove pull-right" aria-hidden="true"></span>
                                                    </a>
                                                </li>
                                            {% endif %}
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </section>

{# Edit Meal Modal Panel #}
<div class="modal fade" id="EditMealModal" tabindex="-1" role="dialog" aria-labelledby="EditMealModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Meal</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <p>Mo | 15.05.17</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                    {{form(form)}}
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default">Gogogo</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
{{ parent() }}
        <script src="{{ asset('js/mealplan.js') }}"></script>
        <script src="{{ asset('bxslider/jquery.bxslider.js') }}"></script>
        <script src="{{ asset('js/slider.js') }}"></script>
{% endblock %}
