{% block flash_messages %}
    {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <div class="row" style="margin-bottom: 20px">
                <div class="col-md-3 m-auto">
                    <div class="alert alert-{{ type }} alert-dismissible fade show text-center" role="alert" style="z-index:1000; position: absolute; margin-left: auto; margin-right: auto; left: 0; right: 0;">
                        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                        </button>
                        {{ message | raw }}
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endfor %}
{% endblock %}
